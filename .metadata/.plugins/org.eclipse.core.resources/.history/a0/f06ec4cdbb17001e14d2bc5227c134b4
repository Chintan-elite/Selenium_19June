package oops;

class Pen
{
	//state/field/datamember/variable
	String color = "red";
	String company = "Cello";
	int price = 50;
	
	public void toWrite()
	{
		System.out.println(color+" "+company+" "+price);
	}
}

public class O001_First {
	public static void main(String[] args) {
		
		Pen pen = new Pen();
		pen.toWrite();
		
	}
}
